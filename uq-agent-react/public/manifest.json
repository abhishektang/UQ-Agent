{
  "manifest_version": 3,
  "name": "UQ Agent",
  "version": "0.3.0",
  "description": "An assistant for UQ students to automate tasks like booking library rooms",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
     "cookies",
     "scripting",
     "nativeMessaging",
     "identity",
      "https://auth.uq.edu.au/",
  "https://portal.my.uq.edu.au/",
  "http://localhost:3001/"
  ],
  "host_permissions": [
    "*://portal.my.uq.edu.au/*",
    "*://auth.uq.edu.au/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://portal.my.uq.edu.au/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; connect-src 'self' http://localhost:3001 https://*.firebaseio.com https://*.googleapis.com https://*.firebaseapp.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com"
  }
}